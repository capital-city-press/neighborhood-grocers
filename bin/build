#! /usr/bin/env ruby

puts "Building with Middleman...\n\n"

puts %x{ bundle exec middleman build }

puts "\nCleaning up after Middleman...\n\n"

html = File.read("build/index.html").gsub('="/', '="')
File.open("build/index.html", "w") { |f| f.write(html) }

css = File.read("build/stylesheets/all.css").gsub("url(/", "url(../")
File.open("build/stylesheets/all.css", "w") { |f| f.write(css) }

puts "All done! Have a great life."
